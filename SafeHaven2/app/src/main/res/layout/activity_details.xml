<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:background="@drawable/gradient"
    tools:context=".bernadette">

    <HorizontalScrollView
        android:id="@+id/i1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/c5"
                    tools:ignore="MissingClass" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/c2"
                    tools:ignore="MissingClass" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/c3"
                    tools:ignore="MissingClass" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/c4"
                    tools:ignore="MissingClass" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/c1"
                    tools:ignore="MissingClass" />

            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tappek (Silver)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/i1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⋅Wood Casket \n⋅Single Top (Half lid Cover)\n⋅Half Glass \n⋅Elegant interiors,corners and handles"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/i2"/>

</RelativeLayout>